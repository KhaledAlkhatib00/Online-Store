@model TUITY_STORE.Models.Login

@{
    ViewData["Title"] = "Edit";
    if (Model.Id == 1)
    {

        Layout = "_DashbordLayout";

    }
    else Layout = "_ContactLayout";
}
<div style="margin-left:50px;">
    <h1>Edit</h1>

    <h4>Change Password</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label hidden asp-for="UserName" class="control-label"></label>
                    <input type="hidden" asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Passwordd" class="control-label">Password</label>
                    <input asp-for="Passwordd" class="form-control" />
                    <span asp-validation-for="Passwordd" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label hidden asp-for="Roleid" class="control-label">Role Name</label>
                    <select hidden asp-for="Roleid" class="form-control" asp-items="ViewBag.Roleid"></select>
                    <span hidden asp-validation-for="Roleid" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label hidden asp-for="Customerid" class="control-label">Role Name</label>
                    <select hidden asp-for="Customerid" class="form-control" asp-items="ViewBag.Roleid"></select>
                    <span hidden asp-validation-for="Customerid" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>

            </form>
        </div>
    </div>

    <div>
        <a href="/Userrs/Edit?id=@Model.Customerid">Back to User Information</a>
        <br />
        <br />
    </div>
</div>