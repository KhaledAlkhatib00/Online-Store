@model TUITY_STORE.Models.Aboutu

@{
    ViewData["Title"] = "Edit";
    Layout = "_DashbordLayout";
}
<div style="margin-left:50px;">
    <h1>Edit</h1>

    <h4>Aboutu</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="AboutText" class="control-label"></label>
                    <input asp-for="AboutText" class="form-control" style="width:1000px;"/>
                    <span asp-validation-for="AboutText" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>