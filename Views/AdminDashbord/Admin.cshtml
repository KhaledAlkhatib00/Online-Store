
@model Tuple<IEnumerable<TUITY_STORE.Models.AdminsInfoJoin>, IEnumerable<TUITY_STORE.Models.ProductCategory>>

@{
    ViewData["Title"] = "Admin";
    Layout = "_DashbordLayout";
   // var x = TempData["Userid"];
}

<div class="main-panel">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top ">
        <div class="container-fluid">
           
            <button class="navbar-toggler" type="button" data-toggle="collapse" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                <span class="sr-only">Toggle navigation</span>
                <span class="navbar-toggler-icon icon-bar"></span>
                <span class="navbar-toggler-icon icon-bar"></span>
                <span class="navbar-toggler-icon icon-bar"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end">
                <form class="navbar-form">
                    <div class="input-group no-border">
                        <input type="text"style="height:40px;" value="" class="form-control" placeholder="Search...">
                        <button type="submit" class="btn btn-white btn-round btn-just-icon" style="color:black;">
                            <i class="material-icons">search</i>
                            <div class="ripple-container"></div>
                        </button>
                    </div>
                </form>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/AdminDashbord/Admin">
                            <i class="material-icons" style="color:black;">dashboard</i>
                            <p class="d-lg-none d-md-block">
                                Stats
                            </p>
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link" href="/Userrs/Edit?id=1" id="navbarDropdownProfile" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons" style="color:darkmagenta;">person</i>
                            <p class="d-lg-none d-md-block">
                                Account
                            </p>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownProfile">
                            <a class="dropdown-item" href="#">Profile</a>
                            <a class="dropdown-item" href="#">Settings</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Log out</a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- End Navbar -->
</div>
<br />
<br />
<br />
<div>
    <div class="content">
        <div class="container-fluid">

            <div class="row">

                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="card card-stats">
                        <div class="card-header card-header-warning card-header-icon">
                            <div class="card-icon">
                                <i class="material-icons">person</i>
                            </div>
                            <p style="font-size:10px;" class="card-category">Number Of Customer</p>
                            <h3 class="card-title">
                                @ViewBag.Numberofcustomer
                                <small>Customer</small>
                            </h3>
                        </div>
                        <div class="card-footer">
                            <div class="stats">
                                <i class="material-icons text-danger">add</i>
                                <a href="/Userrs/Create">Add New Customer</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="card card-stats">
                        <div class="card-header card-header-success card-header-icon">
                            <div class="card-icon">
                                <i class="material-icons">checkroom</i>
                            </div>
                            <p style="font-size:10px;" class="card-category">Number Of Product</p>
                            <h3 class="card-title">
                                @ViewBag.Numberofproduct
                                <small>Product</small>
                            </h3>
                        </div>
                        <div class="card-footer">
                            <div class="stats">
                                <i class="material-icons">add</i>
                                <a href="/Productts/Create">Add New Product</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="card card-stats">
                        <div class="card-header card-header-danger card-header-icon">
                            <div class="card-icon">
                                <i class="material-icons">balance</i>
                            </div>
                            <p style="font-size:10px;" class="card-category">Total Sales</p>
                            <h3 class="card-title">
                                @ViewBag.TotalSales
                                <small>$$</small>
                            </h3>
                        </div>
                        <div class="card-footer">
                            <div class="stats">
                                <i class="material-icons">report</i>
                                <a href="/AdminDashbord/Report">Show Report</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="card card-stats">
                        <div class="card-header card-header-warning card-header-icon">
                            <div class="card-icon">
                                <i class="material-icons">extension</i>
                            </div>
                            <p style="font-size:10px;" class="card-category">Number of Orders</p>
                            <h3 class="card-title">
                                @ViewBag.OrderNumber
                                <small>Orders</small>
                            </h3>
                        </div>
                        <div class="card-footer">
                            <div class="stats">
                                <i class="material-icons text-danger">more</i>
                                <a href="/AdminDashbord/OrdersTable">See All Order</a>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <div class="row">
                <div class="container-fluid py-4">
                    <div class="row mt-4 offset-md-1" style="width:1600px;">
                        <div class="col-lg-7 mb-lg-0 mb-4">
                            <div class="card z-index-2 h-100">
                                <div class="card-header pb-0 pt-3 bg-transparent">
                                    <h6 class="text-capitalize">Sales overview</h6>
                                    <p class="text-sm mb-0">
                                        <i class="fa fa-arrow-up text-success"></i>
                                        <span class="font-weight-bold">4% more</span> in 2022
                                    </p>
                                </div>
                                <div class="card-body p-3">
                                    <div class="chart">
                                        <canvas id="chart-line" class="chart-canvas" height="300"></canvas>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <br /><br />
           
            <div class="row">
                <div class="col-lg-6 col-md-12">
                    <div class="card">
                        <div class="card-header card-header-tabs card-header-primary">
                            <div class="nav-tabs-navigation">
                                <div class="nav-tabs-wrapper">
                                    <span class="nav-tabs-title">Categorys</span>
                                    <button type="button" rel="tooltip" title="add" class="btn">
                                        <a href="/Categoryies/Create"><i class="material-icons">add</i></a>
                                    </button>

                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="tab-content">
                                <div class="tab-pane active" id="profile">
                                    <table class="table">
                                        <thead class="text-warning">
                                            <tr>
                                                <th>ID</th>
                                                <th>Name</th>
                                                <th>Image</th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.Item2)
                                            {

                                                <tr>
                                                    <td>@item.Id</td>
                                                    <td>@item.CategoryName</td>
                                                    <td>
                                                        <img src=@Url.Content("~/Image/"+item.ImagePath) alt="Alterenate Text" width="100" height="100" />
                                                    </td>
                                                    <td>
                                                        <button type="button" rel="tooltip" title="Edit Task" class="btn btn-primary btn-link btn-sm">
                                                            <a href="/Categoryies/Edit/@item.Id"><i class="material-icons">edit</i></a>
                                                        </button>
                                                    </td>
                                                    <td>
                                                        <div>
                                                            <button type="button" rel="tooltip" title="Remove" class="btn btn-danger btn-link btn-sm">
                                                                <a href="/Categoryies/Delete/@item.Id"><i class="material-icons">close</i></a>
                                                            </button>
                                                        </div>
                                                    </td>


                                                </tr>
                                            }

                                        </tbody>
                                    </table>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 col-md-12">
                    <div class="card">
                        <div class="card-header card-header-warning">
                            <h4 class="card-title">Admins</h4>
                            <p class="card-category">Admin Lists</p>
                        </div>
                        <div class="card-body table-responsive">
                            <table class="table table-hover">
                                <thead class="text-warning">
                                    <tr>
                                        <th>Customer ID</th>
                                        <th>Fist Name</th>
                                        <th>Last Name</th>
                                        <th>User Name</th>
                                        <th>Role Id</th>
                                        <th>Image</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Item1)
                                    {

                                        <tr>
                                            <td>@item.User.Id</td>
                                            <td>@item.User.Fname</td>
                                            <td>@item.User.Lname</td>
                                            <td>@item.Login.UserName</td>
                                            <td>@item.Login.Roleid</td>
                                            <td>
                                                <img src=@Url.Content("~/Image/"+item.User.Imagepath) alt="Alterenate Text" width="100" height="100" />
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>
