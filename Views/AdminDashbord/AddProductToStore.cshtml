@model IEnumerable<TUITY_STORE.Models.StorProduct>

@{
    ViewData["Title"] = "Products";
    Layout = "_DashbordLayout";
}

<div class="col-lg-10 col-md-10 offset-lg-1">
    <div class="card">
        <div class="card-header card-header-tabs card-header-primary">
            <div class="nav-tabs-navigation">
                <div class="nav-tabs-wrapper">
                    <span class="nav-tabs-title">Stores Products</span>
                    <button type="button" rel="tooltip" title="add" class="btn">
                        <a href="/StorProducts/Create"><i class="material-icons">add</i></a>
                    </button>

                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="tab-content">
                <div class="tab-pane active" id="profile">
                    <table class="table">
                        <thead class="text-warning">
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>SALE</th>
                                <th>PRICE</th>
                                <th>CATEGORY NAME</th>
                                <th>Store Name</th>
                                <th>IMAGE</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {

                                <tr>
                                    <td>@item.Product.Id</td>
                                    <td>@item.Product.Namee</td>
                                    <td>@item.Product.Sale</td>
                                    <td>@item.Product.Price</td>
                                    <td>@item.Product.ProductCategory.CategoryName</td>
                                    <td>@item.Store.StoreName</td>

                                    <td>
                                        <img src=@Url.Content("~/Image/"+item.Product.Imagepath) alt="Alterenate Text" width="100" height="100" />
                                    </td>
                                    <td>
                                        <button type="button" rel="tooltip" title="Edit Task" class="btn btn-primary btn-link btn-sm">
                                            <a href="/StorProducts/Edit/@item.Id"><i class="material-icons">edit</i></a>
                                        </button>
                                    </td>
                                    <td>
                                        <div>
                                            <button type="button" rel="tooltip" title="Remove" class="btn btn-danger btn-link btn-sm">
                                                <a href="/StorProducts/Delete/@item.Id"><i class="material-icons">close</i></a>
                                            </button>
                                        </div>
                                    </td>


                                </tr>
                            }

                        </tbody>

                    </table>
                </div>

            </div>
        </div>
    </div>
</div>