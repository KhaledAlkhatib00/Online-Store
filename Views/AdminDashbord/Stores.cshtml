
@model IEnumerable<TUITY_STORE.Models.StoresDashbord>
@{
    Layout = "_DashbordLayout";
}

<div class="col-lg-10 col-md-12 offset-md-1">
    <div class="card">
        <div class="card-header card-header-tabs card-header-primary">
            <div class="nav-tabs-navigation">
                <div class="nav-tabs-wrapper">
                    <span class="nav-tabs-title">Stores</span>
                    <button type="button" rel="tooltip" title="add" class="btn">
                        <a href="/Storees/Create"><i class="material-icons">add</i></a>
                    </button>
                    
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="tab-content">
                <div class="tab-pane active" id="profile">
                    <table class="table">
                        <thead class="text-warning">
                            <tr>
                                <th>ID</th>
                                <th>Store Name</th>
                                <th>Store Category</th>
                                <th>Image</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item2 in Model)
                            {

                                <tr>
                                    <td>@item2.store.Id</td>
                                    <td>@item2.store.StoreName</td>
                                    <td>@item2.categoryy.CategoryyName</td>
                                    <td>
                                        <img src=@Url.Content("~/Image/"+item2.store.ImagePath) alt="Alterenate Text" width="100" height="100" />
                                    </td>
                                    <td>
                                        <button type="button" rel="tooltip" title="Edit Task" class="btn btn-primary btn-link btn-sm">
                                            <a href="/Storees/Edit/@item2.store.Id"><i class="material-icons">edit</i></a>
                                        </button>
                                    </td>
                                    <td>
                                        <button type="button" rel="tooltip" title="Remove" class="btn btn-danger btn-link btn-sm">
                                            <a href="/Storees/Delete/@item2.store.Id"><i class="material-icons">close</i></a>
                                        </button>
                                    </td>


                                </tr>
                            }

                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>


