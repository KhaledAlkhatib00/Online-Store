@model TUITY_STORE.Models.Productt

@{
    ViewData["Title"] = "Create";
    Layout = "_DashbordLayout";

}
<div style="margin-left:50px;">
    
    <h1>Create</h1>

    <h4>Productt</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ImageFile" class="control-label"><span><u>Select Image</u></span></label>
                    <input asp-for="ImageFile" class="form-control" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Namee" class="control-label"></label>
                    <input asp-for="Namee" class="form-control" />
                    <span asp-validation-for="Namee" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Sale" class="control-label"></label>
                    <input asp-for="Sale" class="form-control" />
                    <span asp-validation-for="Sale" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductCategoryId" class="control-label">Catrgory</label>
                    <select asp-for="ProductCategoryId" class="form-control" asp-items="ViewBag.ProductCategoryId"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a href="/AdminDashbord/Products">Back to List</a>
    </div>


</div>