                            </div>*@

                        @*<div class="form-group">
                                <label hidden asp-for="DATEFROM" class="control-label"></label>
                                <input hidden asp-for="DATEFROM" class="form-control" />
                                <span hidden asp-validation-for="DATEFROM" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label hidden asp-for="DATETO" class="control-label"></label>
                                <input hidden asp-for="DATETO" class="form-control" />
                                <span hidden asp-validation-for="DATETO" class="text-danger"></span>
                            </div>*@
