                            <label hidden for="productid"><i class="zmdi zmdi-lock"></i></label>
                            <input hidden type="text" name="productid" id="productid" value="@item.productt.Id" placeholder="Product ID " style="width:200px; height:30px; font-size:20px;" />
                        </div>
                        <div class="form-group">
                            <label for="quantiti"><i class="zmdi zmdi-lock"></i></label>
                            <input type="number" name="quantiti" id="quantiti" placeholder="Quantity" style="width:200px; height:30px; font-size:20px;" />
